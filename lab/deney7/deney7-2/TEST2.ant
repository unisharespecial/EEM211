`timescale 1ns/1ps

module TEST2;
    reg a = 1'b0;
    reg b = 1'b0;
    reg c = 1'b0;
    reg d = 1'b0;
    wire F;


    MUX UUT (
        .a(a),
        .b(b),
        .c(c),
        .d(d),
        .F(F));

    integer TX_FILE = 0;
    integer TX_ERROR = 0;
    
    initial begin    // Annotation process
        #0;
        ANNOTATE_F;
        forever begin
            #50;
            ANNOTATE_F;
            #50;
        end
    end

    initial begin  // Open the annotations file...
        TX_FILE = $fopen("C:\\Documents and Settings\\user\\Desktop\\deney7-2\\TEST2.ano");
        #2000 // Final time:  2000 ns
        $display("Success! Annotation Simulation Complete.");
        $fdisplay(TX_FILE, "Total[%d]", TX_ERROR);
        $fclose(TX_FILE);
        $finish;
    end

    initial begin
        // -------------  Current Time:  300ns
        #300;
        d = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  400ns
        #100;
        d = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  500ns
        #100;
        a = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  600ns
        #100;
        a = 1'b0;
        b = 1'b1;
        c = 1'b1;
        d = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  700ns
        #100;
        b = 1'b0;
        d = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  800ns
        #100;
        d = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  900ns
        #100;
        a = 1'b1;
        b = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  1000ns
        #100;
        a = 1'b0;
        b = 1'b0;
        d = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  1100ns
        #100;
        b = 1'b1;
        d = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  1200ns
        #100;
        a = 1'b1;
        c = 1'b0;
        d = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  1300ns
        #100;
        a = 1'b0;
        b = 1'b0;
        c = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  1400ns
        #100;
        a = 1'b1;
        b = 1'b1;
        d = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  1500ns
        #100;
        b = 1'b0;
        c = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  1600ns
        #100;
        a = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  1700ns
        #100;
        a = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  1800ns
        #100;
        a = 1'b0;
        c = 1'b1;
    end

    task ANNOTATE_F;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,F,%b]", $time, F);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

endmodule

