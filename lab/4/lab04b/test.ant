`timescale 1ns/1ps

module test;
    wire LD0;
    wire LD1;
    wire LD2;
    wire LD3;
    wire LD4;
    reg SW0 = 1'b0;
    reg SW1 = 1'b0;
    reg SW2 = 1'b0;
    reg SW3 = 1'b0;
    reg SW4 = 1'b1;
    reg SW5 = 1'b0;
    reg SW6 = 1'b0;
    reg SW7 = 1'b0;
    reg BTN0 = 1'b0;


    fourbitadder2 UUT (
        .LD0(LD0),
        .LD1(LD1),
        .LD2(LD2),
        .LD3(LD3),
        .LD4(LD4),
        .SW0(SW0),
        .SW1(SW1),
        .SW2(SW2),
        .SW3(SW3),
        .SW4(SW4),
        .SW5(SW5),
        .SW6(SW6),
        .SW7(SW7),
        .BTN0(BTN0));

    integer TX_FILE = 0;
    integer TX_ERROR = 0;
    
    initial begin    // Annotation process
        #0;
        ANNOTATE_LD0;
        ANNOTATE_LD1;
        ANNOTATE_LD2;
        ANNOTATE_LD3;
        ANNOTATE_LD4;
        forever begin
            #50;
            ANNOTATE_LD0;
            ANNOTATE_LD1;
            ANNOTATE_LD2;
            ANNOTATE_LD3;
            ANNOTATE_LD4;
            #50;
        end
    end

    initial begin  // Open the annotations file...
        TX_FILE = $fopen("G:\\lab04b\\test.ano");
        #1000 // Final time:  1000 ns
        $display("Success! Annotation Simulation Complete.");
        $fdisplay(TX_FILE, "Total[%d]", TX_ERROR);
        $fclose(TX_FILE);
        $finish;
    end

    initial begin
        // -------------  Current Time:  100ns
        #100;
        SW0 = 1'b1;
        SW2 = 1'b1;
        SW3 = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  200ns
        #100;
        SW0 = 1'b0;
        SW1 = 1'b1;
        SW2 = 1'b0;
        SW4 = 1'b0;
        SW5 = 1'b1;
        SW6 = 1'b1;
        SW7 = 1'b1;
        BTN0 = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  300ns
        #100;
        SW2 = 1'b1;
        SW4 = 1'b1;
        SW6 = 1'b0;
        SW7 = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  400ns
        #100;
        SW0 = 1'b1;
        SW2 = 1'b0;
        SW3 = 1'b0;
        SW5 = 1'b0;
        SW6 = 1'b1;
        BTN0 = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  500ns
        #100;
        SW1 = 1'b0;
        SW2 = 1'b1;
        SW6 = 1'b0;
        SW7 = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  600ns
        #100;
        SW0 = 1'b0;
        SW2 = 1'b0;
        SW3 = 1'b1;
        SW4 = 1'b0;
        SW5 = 1'b1;
        SW6 = 1'b1;
        SW7 = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  700ns
        #100;
        SW0 = 1'b1;
        SW2 = 1'b1;
        SW6 = 1'b0;
        BTN0 = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  800ns
        #100;
        SW1 = 1'b1;
        SW2 = 1'b0;
        SW3 = 1'b0;
        SW4 = 1'b1;
        SW5 = 1'b0;
        SW7 = 1'b1;
        BTN0 = 1'b0;
        // -------------------------------------
        // -------------  Current Time:  900ns
        #100;
        SW2 = 1'b1;
        // -------------------------------------
        // -------------  Current Time:  1000ns
        #100;
        SW2 = 1'b0;
    end

    task ANNOTATE_LD0;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,LD0,%b]", $time, LD0);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

    task ANNOTATE_LD1;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,LD1,%b]", $time, LD1);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

    task ANNOTATE_LD2;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,LD2,%b]", $time, LD2);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

    task ANNOTATE_LD3;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,LD3,%b]", $time, LD3);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

    task ANNOTATE_LD4;
        #0 begin
            $fdisplay(TX_FILE, "Annotate[%d,LD4,%b]", $time, LD4);
            $fflush(TX_FILE);
            TX_ERROR = TX_ERROR + 1;
        end
    endtask

endmodule

